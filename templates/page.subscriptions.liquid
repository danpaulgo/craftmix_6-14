<div class="page">
  <div class="page-container">
    {% if request.path == '/pages/my-subscriptions' %}
    <a href="{{ routes.account_url }}" class="PageHeader__Back Heading Text--subdued Link Link--primary u-h7">{% render 'icon' with 'select-arrow-left' %} {{ 'customer.account.back_to_account' | t }}</a><br/>
    {% endif %}
    <h1>{{ page.title }}</h1>
    <p>{{ page.content }}</p>
    <p id='customer-portal-additional'></p>
  </div>
</div>

<script>
  {% if request.path == '/pages/my-subscriptions' %}
    $(document).ready(function(){
      setTimeout(checkSubs, 1000)  
    })
  {% endif %}
  
   function checkSubs(){
      if ($('#customer-portal-root').text() === '') {
        $('#customer-portal-additional').html('<center>You currently donâ€™t have any active subscriptions.<br/><a href="/collections/flavors-2020">Let\'s change that!</a></center>')
      } else {
        $('#customer-portal-additional').html('')
      }
      setTimeout(checkSubs, 1000)
    }
</script>

