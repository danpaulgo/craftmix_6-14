<style>
  
  .insta {
   	width: 24vw;
    height: 24vw;
    border-radius: 5vw;
    position: relative;
    overflow: hidden;
    transition: transform 0.25s ease-in-out;
  }
  
  .insta a {
   	width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .insta .photo {
   	position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
  }
  
  .insta .view-post {
   	width: 18vw;
    z-index: 10;
    display: none;
  }
  
  .insta:nth-child(2n + 1):hover {
   	transform: translateY(-10px);
  }
  
  .insta:nth-child(2n) {
   	transform: translateY(100px); 
  }
  
  .insta:nth-child(2n):hover {
   	transform: translateY(90px); 
  }
  
  .insta:hover .view-post{
   	 display: inline-block;
  }
  
  
  .instagram {
    background-color: var(--yellow-color);
    padding-top: calc(20px + 14vw);
    padding-bottom: 80px;
    position: relative;
    width: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index:1;
  }
  
  .instagram-container {
   	width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1;
    padding-top: 36px;
  }
  
  .instagram-blocks {
   	display: flex;
    width: 98vw;
    justify-content: space-between;
    flex-direction: row;
    margin-bottom: 48px;
    height: calc(24vw + 100px);
  }
  
  .instagram-links {
   	display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .instagram-links .link-label {
	color: var(--orange-color);
    font-size: 22px;
    margin-bottom: 20px;
    font-weight: 800;
    text-transform: uppercase;
  }
  
  .instagram .top-curve {
   	position:absolute;
    top:-130px;
    height: 130px;
    left: 0;
    width: 100%;
    max-width: unset;
  }
  
  .instagram .title-image {
    text-align: center;
   	width: 100%;
    margin-bottom: 0px;
  }
  
  .instagram .title-image object{
    width: 60%;
  }
  
  .centered {
   	margin: 0 auto; 
  }
  
  @media (max-width: 1023px) {
   .instagram-blocks {
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    flex-wrap: wrap;
    height: 82vw;
    width: 83vw;
    max-width: 366px;
    max-height: 360px;
   }
   .insta {
    width: 47%;
    height: 47%;
    border-radius: 20px;
    margin-bottom: 2%;
   }
    .insta:nth-child(2n + 1):hover {
      transform: unset;
    }

    .insta:nth-child(2n) {
      transform: unset; 
    }

    .insta:nth-child(2n):hover {
      transform: unsnet; 
    }
    
    .insta:nth-child(n+3), .insta:nth-child(n+4) {
      transform: translateY(20px);
    }
  }
  
</style>


