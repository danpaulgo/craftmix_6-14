<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class='feature-section'>
	<h2 class='Heading feature-title'>
      	{{ section.settings.section_title }}
  	</h2>
  	<div class='feature-blocks'>
      	{%- assign n = 0 -%}
		{%- for block in section.blocks -%}
  		  <div class='feature-block'>
            	{%- assign m = n | minus: 1 | divided_by: 2 | modulo: 2 -%}
	            <span class='dot {% if m == 0 %}green{% endif %}'></span>
            	{{ block.settings.feature_text }}
	      </div>
      	  {%- assign n = n | plus: 1 -%}
		{%- endfor -%}
	</div>
</section>

{% schema %}
{
  "name": "Feature Section",
  "class": "shopify-section--feature",
  "max_blocks": 8,
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "Why Aila vs. Other Brands"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "feature_text",
          "label": "Feature Text"
        }
	  ]
    }
  ],
  "presets": [
    {
      "category": "Section",
      "name": "Features Section",
      "settings": {},
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}

