<style>
  
  
  
  .mobile-title-image {
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .testimonial {
   	width: 22vw; 
    height: 30vw;
    display: inline-block;
    margin-right: -1vw;
  }
  
  .testimonial .top {
   	content: ' ';
    background-size:contain;
    height: 10vw;
    background-position: bottom center;
    background-repeat: no-repeat;
  }
  
  .testimonial .name {
  	display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 3px;
    font-family: 'Hornbill';
    font-weight: 700;
  }
  
  .testimonial .person {
  	display: flex;
    flex-direction: column;
    
  }
  
  .testimonial .name img {
   	width: 22px; 
    margin-left: 6px;
  }
  .testimonial .person > svg {
   	width: 90px; 
    fill: #079dff;
  }
  
  .testimonial .content {
  	padding: 20px;
    padding-top: 4vw;
    width: 18.5vw;
    display: flex;
    color: black;
    flex-direction: column;
    justify-content: space-between;
    font-size: 1.2vw;
    line-height: 1.5;
    height: 20vw;
    background-image: url({{ 'cubes.svg' | asset_url }});
    background-size: contain;
    background-repeat: no-repeat;
  }
  
  .testimonial .content .review {
    
  }
  
  .testimonial:nth-child(5n) .top {
    background-image: url({{ 'top-1.svg' | asset_url }});
  }
  .testimonial:nth-child(5n+1) .top {
    background-image: url({{ 'top-2.svg' | asset_url }});
  }
  .testimonial:nth-child(5n+2) .top {
    background-image: url({{ 'top-3.svg' | asset_url }});
  }
  .testimonial:nth-child(5n+3) .top {
    background-image: url({{ 'top-4.svg' | asset_url }});
  }
  .testimonial:nth-child(5n+4) .top {
    background-image: url({{ 'top-5.svg' | asset_url }});
  }
  
  .testimonial:nth-child(5n) .content {
    background-color: #e6dbea;
  }
  .testimonial:nth-child(5n+1) .content {
	background-color: #bde9c9;
  }
  .testimonial:nth-child(5n+2) .content {
	background-color: #ffcad9;
  }
  .testimonial:nth-child(5n+3) .content {
	background-color: #ffe10d;
  }
  .testimonial:nth-child(5n+4) .content {
	background-color: #ff6b00;
  }
  
  .testimonial-blocks {
	width: 100%;
    height: 30vw;
  }
  
  .testimonial-container::-webkit-scrollbar {
  	display: none;
  }
  
  .testimonials {
    background-color: var(--cream-color);
    padding-top: 80px;
    padding-bottom: calc(80px + 27vw);
    position: relative;
    width: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  
  .testimonials .top-curve {
   	position:absolute;
    top:-130px;
    height: 130px;
    left: 0;
    width: 100%;
    transform: scaleX(-1);
    max-width: unset;
  }
  
  .testimonials .title-image {
    text-align: center;
   	width: 100%;
  }
  
  .testimonials .title-image.desktop-only {
    margin-bottom: -60px; 
  }
  
  .testimonials .title-image object, .testimonials .title-image svg{
    width: 60%;
  }
  
  .centered {
   	margin: 0 auto; 
  }
  
  @media (max-width: 1023px) {
    .mobile-top-curve {
        position:absolute;
	    top:-35px;
    	height: 36px;
    	margin: 0;
    	left: 0;
    	width: 100%;
    	max-width: unset; 
    }
    
    .testimonial {
      width: 280px; 
      height: 380px;
      display: inline-block;
      margin-right: -9px;
    }

    .testimonial .top {
      content: ' ';
      background-size:contain;
      height: 126px;
      background-position: bottom center;
      background-repeat: no-repeat;
    }


    .testimonial .content {
      padding-top: 50px;
      width: 235px;
      font-size: 14px;
      height: 255px;
    }

    .testimonial-blocks {
      height: 380px;
    }

    .testimonials {
        padding-bottom: 100px;
      	padding-top: 60px;
     }
  }
  
</style>

<script>
  window.addEventListener('DOMContentLoaded', (event) => {
    $('.testimonial-blocks').flickity({ 
